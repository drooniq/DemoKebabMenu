<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:DemoKebabMenu.CustomControls">
    <Style Selector="controls|PopupMessage">
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}"
                        Padding="20"
                        MinWidth="200"
                        MaxWidth="400">
                    <StackPanel Spacing="10">
                        <TextBlock Text="{TemplateBinding Title}"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   TextAlignment="Center"
                                   Foreground="White"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="{TemplateBinding Message}"
                                   FontSize="12"
                                   TextAlignment="Center"
                                   Foreground="White"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>